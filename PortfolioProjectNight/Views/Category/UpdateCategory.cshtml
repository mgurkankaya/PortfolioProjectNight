@model PortfolioProjectNight.Models.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}
<form method="post">
    <div class="container">
        <br /><br />
        <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
        <div class="alert alert-success"> Kategori Güncelleme Sayfası</div>
        <label>Yetenek Adı</label>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary btn-block text-center">Güncelle</button>
        <a href="/Category/CategoryList" class="btn btn-secondary btn-block text-center">Vazgeç</a>
    </div>
</form>