@model List<PortfolioProjectNight.Models.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2 class="mb-4">Referanslar Listesi</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim Soyisim</th>
            <th scope="col">Lokasyon</th>
            <th scope="col">Yorum</th>
            <th scope="col">Görsel URL</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
            <tr>
                <th scope="row">@item.TestimonailId</th>
                <td>@item.NameSurname</td>
                <td>@item.Location</td>
                <td>@item.Comment</td>
                <td><img src="@item.ImgUrl" width="80" height="80" /></td>
                <td>
                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonailId" class="btn-sm btn-danger"><i class=" fa fa-trash"></i></a>
                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonailId" class="btn-sm btn-primary"><i class=" fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Testimonial/CreateTestimonial" class="btn-sm btn-primary btn-block text-center"><i class=" fa fa-plus mr-3"></i>Ekle</a>