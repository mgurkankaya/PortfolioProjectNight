@model List<PortfolioProjectNight.Models.Experience>
@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<h2>Deneyimler Listesi</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Deneyim Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Title</td>
                <td>

                    @item.Description
                </td>
                <td>
                    <a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn-sm btn-danger"><i class=" fa fa-trash"></i></a>
                    <a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn-sm btn-primary"><i class=" fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Experience/CreateExperience" class="btn-sm btn-primary btn-block text-center"><i class=" fa fa-plus mr-3"></i>Ekle</a>