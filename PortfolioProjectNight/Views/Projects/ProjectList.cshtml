@model List<PortfolioProjectNight.Models.Project>
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Proje Listesi</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Alt Başlık</th>
            <th scope="col">Görsel URL</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
   
            <tr>
                <th scope="row">@item.ProjectId</th>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td><img src="@item.ImgUrl" width="100" height="100" /></td>
                <td>
                    <a href="/Projects/DeleteProject/@item.ProjectId" class="btn-sm btn-danger"><i class=" fa fa-trash"></i></a>
                    <a href="/Projects/UpdateProject/@item.ProjectId" class="btn-sm btn-primary"><i class=" fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Projects/CreateProject" class="btn-sm btn-primary btn-block text-center"><i class=" fa fa-plus mr-3"></i>Ekle</a>