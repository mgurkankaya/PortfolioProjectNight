﻿@model List<PortfolioProjectNight.Models.SocialMedia>
<div class="container-fluid" id="pigraAbout">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-3">
                <div class="about-header bg-dark h-100 pt-6 pe-6 pb-6">
                    <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                        <p class="text-white sub-title">Hakkımda</p>
                        <h1 class="display-6 text-white mb-0"></h1>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="about-content h-100 pt-6 ps-6 pb-6">
                    <div class="row g-4">
                        <div class="col-xl-5">
                            <div class="about-img bg-light p-4 wow fadeInUp" data-wow-delay="0.1s">
                                <img src="@ViewBag.aboutImgUrl" class="img-fluid w-100" alt="Image">
                                <div class="sosial-icon">
                                    @foreach (var item in Model)
                                    {
                                        <a class="btn btn-primary btn-sm-square mb-3" href="@item.Url"><i class="@item.Icon"></i></a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                            <h4 class="mb-4">@ViewBag.aboutTitle</h4>
                            <p class="mb-4">
                                @ViewBag.aboutDescription
                            </p>
                            <a href="/Admin/DownloadMyCv" target="_blank" class="btn btn-primary py-2 px-4 "> <i class="fas fa-download me-2"></i>Download My CV</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>