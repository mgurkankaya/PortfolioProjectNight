@model List<PortfolioProjectNight.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2 class="mb-4">Eğitim Listesi</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Alt Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Yıl</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
                <th scope="row">@item.EducationId</th>
                <td>@item.Title</td>
                <td>@item.Subtitle</td>
                <td>@item.Description</td>
                <td>@item.Year</td>
                <td>
                    <a href="/Education/DeleteEducation/@item.EducationId" class="btn-sm btn-danger"><i class=" fa fa-trash"></i></a>
                    <a href="/Education/UpdateEducation/@item.EducationId" class="btn-sm btn-primary"><i class=" fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Education/CreateEducation" class="btn-sm btn-primary btn-block text-center"><i class=" fa fa-plus mr-3"></i>Ekle</a>