@model List<PortfolioProjectNight.Models.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h2 class="mb-4">Hizmetlerim Listesi</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">İkon</th>
            <th scope="col">Açıklama</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ServiceId</th>
                <td>@item.Title</td>
                <td>@item.Icon</td>
                <td>@item.description</td>
                <td>
                    <a href="/Services/DeleteService/@item.ServiceId" class="btn-sm btn-danger"><i class=" fa fa-trash"></i></a>
                    <a href="/Services/UpdateService/@item.ServiceId" class="btn-sm btn-primary"><i class=" fa fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Services/CreateService" class="btn-sm btn-primary btn-block text-center"><i class=" fa fa-plus mr-3"></i>Ekle</a>