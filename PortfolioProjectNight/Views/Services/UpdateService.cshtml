@model PortfolioProjectNight.Models.Service
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Admin/Index.cshtml";
}

<form method="post">
    <div class="container">
        <br /><br />
        <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
        <div class="alert alert-success">Servis Bilgisi Güncelleme Sayfası</div>
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>İkon</label>
        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.description, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary btn-block text-center">Güncelle</button>
        <a href="/Services/ServiceList" class="btn btn-secondary btn-block text-center">Vazgeç</a>
    </div>
</form>